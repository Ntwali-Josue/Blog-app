<div class="post_container">
<%=  link_to user_post_path(user.id, post.id) do%>
     <h2>Post #<%= post.id %></h2>
     <p><%= post.text %></p>
     <div class="d-flex likes-comments-container">
       <span>Comments: <%= post.postsCounter || 0 %></span>
       <span>Likes: <%= post.LikesCounter || 0 %></span>
     </div>
<%end%>
</div>