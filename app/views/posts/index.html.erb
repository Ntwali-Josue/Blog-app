<div class="comments py-3">
  <p id="notice"><%= notice %></p>
  <%= render partial: "layouts/header", locals: {user: @user} %>
  <div class="form p-2 my-4 border border-dark">
    <%= render partial: "form" %>
  </div>
  <% @posts.each do |post|%>
    <div class="d-flex flex-column py-3">
      <%= render partial: "posts/post", locals: {post: post, user: @user} %>
      <ul class="comments-list">
        <% post.most_recent_posts.each do |post| %>
          <li> <%= @user.name%> : <%= post.text%></li>
        <%end%>
      </ul>
  </div>
  <%end%>
  <div class="pagination-btn">
    <%= link_to "Pagination"%>
  </div>
</div>