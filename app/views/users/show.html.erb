<div class="container">
  <h1 class="py-5"><%= @user.name %> Detail</h1>
  <%= render partial: "layouts/header", locals: {user: @user} %>
  <div class="bio">
     <h2>BIO</h2>
     <p><%= @user.bio %></p>
  </div>
  <div class="user-posts">
  <% @user.most_recent_posts.each do |post| %>
  <%= render partial: "posts/post", locals: {post: post, user: @user} %>
  <% end %>
  </div>
  <div class="see-posts">
    <%= link_to "See all posts", user_posts_path(@user.id), {class: "btn btn-primary w-25"}%>
  </div>
</div>